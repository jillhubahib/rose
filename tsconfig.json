{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedParameters": false,
		"noUnusedLocals": false,
		"sourceMap": true,
		"outDir": "build/"
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts",
		"tools/**/*.ts"
	]
}
